<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="퀘스트를 받는 사람"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/addFriendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="대상 추가" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="퀘스트 내용"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/informQuest"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="(요청사항을 적어주세요)" />

    <EditText
        android:id="@+id/rewardQuest"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="(퀘스트 보상을 적어주세요)" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="퀘스트 난이도" />

    <RatingBar
        android:id="@+id/ratingdifficulty"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:numStars="5"
        android:stepSize="0.5"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="퀘스트 종료 기한" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deadLineText"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:text="2022/02/03(10:30)"
            android:textSize="25sp" />

        <Button
            android:id="@+id/setDeadLineBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="날짜 지정" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/sendQuestBtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="퀘스트 보내기" />
    </LinearLayout>

</LinearLayout>